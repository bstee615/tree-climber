{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "CFG parser (choose language)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/tree_sprawler/cfg/test_${input:cfgLang}.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Dataflow parser",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/tree_sprawler/dataflow/main.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Run Server and Frontend",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173/",
            "preLaunchTask": "Run Server and Frontend",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "name": "Run Server and Frontend (Browser Only)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173/",
            "presentation": {
                "reveal": "always"
            },
            "webRoot": "${workspaceFolder}/src/tree_sprawler/viz/frontend/src"
        }
    ],
    "inputs": [
        {
            "id": "cfgLang",
            "type": "pickString",
            "description": "Choose CFG language",
            "options": ["c", "java"],
            "default": "c"
        }
    ]
}